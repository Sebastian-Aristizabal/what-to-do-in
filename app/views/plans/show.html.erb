<div class= "container-plan">
  <div class="banner-plan d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @plan.photos.first.key, crop: :fill %>')">

    <ul id = "list">
      <li class= "item-list"><a href="<%=@plan.facebook_link%>" target="_blank"> <i class="fa-brands fa-facebook-f"></i></a></li>
      <li class= "item-list"><a href="<%=@plan.instagram_link%>" target="_blank"> <i class="fa-brands fa-instagram"></i></a></li>
      <li class= "item-list"><a href="<%=@plan.link_web%>" target="_blank"> <i class="fa-solid fa-globe"></i></a></li>
    </ul>
    <div>
      <% if user_signed_in? %>
        <%= link_to "", plan_selected_plans_path(plan_id: @plan), data:{turbo_method: :post}, class: "fa-sharp fa-solid fa-heart icon" %>
      <% else %>
        <%= link_to "", new_user_session_path, class: "fa-sharp fa-solid fa-heart icon" %>
      <% end %>
    </i></div>
  </div>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>



  <div class = "container-header">
    <%# <img class = "img-banner" src="https://images.unsplash.com/photo-1584999734482-0361aecad844?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=580&q=80" alt="">

    <h4 class = "img-banner">Daniel Soriano</h4> %>
    <%# <div class="item2 avatar-big-plan"> %>
      <%# <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt=""> %>
    <%# </div> %>
    <div class="item1">
      <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="" class="avatar-big-plan">
    </div>
    <div class="item2"><h2><%= @plan.title %></h2></div>
    <div class="item3"><h3><%= @plan.user.first_name %> <%= @plan.user.last_name %></h3>
          <% if user_signed_in? %>
            <% if current_user.id == @plan.user_id %>
              <%= button_to "Delete", @plan, :method => :delete, class: "btn btn-ghost"  %>
              <%= link_to "Edit", edit_plan_path(plan_id: @plan.id), class: "btn btn-ghost" %>
            <% end %>
          <% end %></div>
    <div class="item4">

    <%# @attendances.each do |attendance| %>
        <h5><%= @attendances_plan %> Personas quieren asistir a este parche</h5>
    <%# end %>

    </div>
    <div class="item5">
      <h5>Desde el:</h5> <i><%= @plan.start_date.to_date %> <%= @plan.start_hour.strftime("%H:%M") %></i>
      <h5>Hasta el:</h5> <i><%= @plan.end_date.to_date %> <%= @plan.end_hour.strftime("%H:%M")%></i>
      <h5><%= @plan.address %></h5>
    </div>
  </div>

  <div class = "container-body">
    <div class = "item6 card-plan"><h4>Detalles</h4><p><%= @plan.details %></p></div>
    <div class = "item7 card-plan">
        <div id="map" style="width: 100%; height: 100%;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAP_BOX_KEY'] %>">
        </div>
    </div>
    <div class = "item8">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @plan.photos.each_with_index do |photo, index| %>
            <div id="carousel_item_<%= index %>" class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <%= cl_image_tag photo.key, class:"photo-show"%><br>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class = "item9">
      <div class = "d-flex justify-content-between">
        <div class = "avatar-medium-plan">
          <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="">
        </div>
        <div class = "w-100">
          <div class= "d-flex justify-content-between">
            <h4>¡Deja tu reseña aquí!</h4>
            <%= simple_form_for([@plan, @review], data: { controller: "form-submit" }) do |f| %>
              <%= f.input :rating, collection: (1..5).to_a, label: "Califica tu experiencia", input_html: {data: {controller: "star-rating", action: "click->form-submit#submit"}} %>
              <%= f.input :comment, :input_html => {:style=> 'width: 100%; margin: auto'}, label: false %>
              <%= f.submit "Submit", class: "btn btn-ghost"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>


    <div class = "item10">
      <% @plan.reviews.each do |review| %>

      <div class = "d-flex justify-content-between">

        <div class = "avatar-medium-plan">
          <img src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="">
        </div>
        <div class = "w-100">
          <div class= "d-flex justify-content-between">
          <h3><%= current_user.first_name %> <%= current_user.last_name %></h3>

          <div class = "d-flex">
            <div>
              <p class="m-0"> <%= "⭐" * review.rating.to_i %> </p>
            </div>
            <div>
              <% if user_signed_in? %>
                <% if current_user.id == review.user_id %>
                <%= button_to "Delete", review_path(review), class: "btn btn-ghost", :method => :delete %>
                <% end %>
              <% end %>
            </div>
          </div>
          </div>
          <div>
            <h5><%= review.comment %></h5>
            <%# <div class =  "flex-grow-1 m-0">
            </div> %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
