<h2 class="title-form">DETALLES MI PERRO!</h2>
  <div class="contenedor_detalles">
    <h1><%=  @plan.title %></h1>
    <p detalles ><%= @plan.details %></p>
    <p><%= @plan.start_date %></p>
    <p><%= @plan.end_date %></p>
    <p><%= @plan.start_hour %></p>
    <p><%= @plan.end_hour %></p>
    <p><%= @plan.address %></p>
    <p><% if @plan.free %></p>
        <%= "Gratis" %>
        <% else %>
        <%= "De pago" %>
        <% end %>
    <%= button_to "Seleccionar ❤", plan_selected_plans_path(plan_id: @plan), method: :post, class: 'btn btn-primary' %>
  </div>

  <div class=" reviews">
    <h2 class="title-form"> COMENTARIOS MI PERRO!</h2>
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
      <% @plan.reviews.each do |review| %>
        <li class="list-group-item"><%= review.comment %></li>
      <% end %>
    </ul>
  </div>


  <div class="formulario_review">
    <h2 class="title-form">DEJA TU COMENTARIO MI PERRO!</h2>
        <%= simple_form_for [@plan, @review] do |f| %>
          <%= f.input :comment, label: 'Haz tu comentario' %>
          <%= f.input :rating, collection: (1..5).to_a, label: 'Valora al chef (1..5)' %>
          <%= f.submit "Submit", class: "btn btn-dark", style: "width:100%"%>
        <% end %>
  </div>
