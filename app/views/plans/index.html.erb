<h2 class="title-form">PARCHES</h2>
<div class="main-container-index">
  <div>
    <ul class="cards">
        <% @plans.each do |plan| %>
            <li class="cards__item">
                <div class="card">
                    <div class="card__image card__image--record"></div>
                    <div class="card__content">
                        <div class="card__title"><%= plan.title %></div>
                        <p class="card__text">Parche: <i> <%= plan.category.name %> </i></p>
                        <%= link_to "detalles del parche", plan_path(plan),class:"btn btn--block card__btn" %>
                    </div>
                </div>
            </li>
        <% end %>
    </ul>
  </div>
  <div id="map">
    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAP_BOX_KEY'] %>"></div>
  </div>
</div>
