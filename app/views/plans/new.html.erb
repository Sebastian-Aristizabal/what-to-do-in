
<h2 class="title-form">¡¡Nuevo parche!! </h2>

<div class="card-log1 mb-3 mx-auto" >
  <div class="row g-0">
    <div class="col-md-6">
      <img src="https://res.cloudinary.com/agr230316/image/upload/v1667070021/development/nuevo_parche_form_cmrvtu.jpg" class="img-fluid rounded-start" alt="..."style="height: 100%;">
    </div>
    <div class="col-md-6">
      <div class="card-body2">
        <%=  simple_form_for @plan do |f| %>
            <%= f.input :title %>
            <%= f.input :video_url %>
            <%= f.input :details %>
            <div class="row">
              <div class="col-6">
                <%#= f.input :start_date, as: :date, html5: true, input_html: {min:Date.today}%>
                <%= f.input :start_date, as: :date,
                data: {
                  controller: "flatpickr",
                  flatpickr_date_format: "Y-m-d",
                  flatpickr_min_date: Time.zone.now
                }%>
              </div>
              <div class="col-6">
                <%= f.input :start_hour, as: :time, html5: true%>
              </div>
            </div>
            <div class="row">
              <div class="col-6">
                <%= f.input :end_date, as: :date, html5: true , input_html: {min:Date.today}%>
              </div>
              <div class="col-6">
                <%= f.input :end_hour, as: :time, html5: true %>
              </div>
              <div class="col-6">
                <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              </div>
            </div>

            <%= f.input :address,
  input_html: {data: {address_autocomplete_target: "address"}},
  wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAP_BOX_KEY"]}}
%>
            <%= f.input :link_web %>
            <%= f.input :instagram_link %>
            <%= f.input :facebook_link %>
            <%# <%= f.input :category_id, collection: [Category.order(:name)], as: :radio_buttons, wrapper: :vertical_collection_inline  %>
            <%= f.collection_select :category_id, Category.order(:name), :id, :name  %>
            <%= f.input :free %>
            <%= f.submit "submit", class: "btn btn-ghost" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
