<div class="s-3">
    <h4> ¡¡New plan!! </h4>
      <%=  simple_form_for @plan, url: plan_path  do |f| %>
        <%= f.input :title %>
        <%= f.input :video_url %>
        <%= f.input :details %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :start_hour %>
        <%= f.input :end_hour %>
        <%= f.input :address %>
        <%= f.input :link_web %>
        <%= f.input :instagram_link %>
        <%= f.input :facebook_link %>
        <%# <%= f.input :category_id, collection: [Category.order(:name)], as: :radio_buttons, wrapper: :vertical_collection_inline  %>
        <%= f.collection_select :category_id, Category.order(:name), :id, :name  %>
        <%= f.input :latitude %>
        <%= f.input :longitude %>
        <%= f.input :free %>
        <%= f.submit "submit", class:"btn btn-primary" %>
      <% end %>
</div>
