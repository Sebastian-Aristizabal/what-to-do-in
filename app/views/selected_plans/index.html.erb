<div class="container">
  <h1>Aqui mis planes seleccionados</h1>
  <% @selected.each do |selected|%>
    <div class="card container">
      <p> <strong>Title:</strong> <%= selected.plan.title %> </p>
      <p> <strong>Id plan:</strong> <%= selected.plan_id %> </p>
      <p> <strong>Id selected:</strong></strong> <%= selected.id %> </p>
      <p> <strong>status:</strong> <%= selected.status %> </p>
      <%= link_to "Ver ❤", plan_path(id: selected.plan_id), class: 'btn btn-primary' %>
      <%= link_to "Eliminar",
        selected_plan_path(selected),
        class: "btn btn-primary",
        data: {turbo_method: :delete}
      %>
    </div>
    <%# <%= link_to "Details", plan_path(plan) %>
  <% end %>

</div>
