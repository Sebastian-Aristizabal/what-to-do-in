
    <h2 class="title-form">Tengo una cuenta</h2>

    <div class="card-log mb-3 mx-auto" style="max-width: 700px; width:800px !important">
      <div class="row g-0">
        <div class="col-md-6">
          <img src="https://res.cloudinary.com/agr230316/image/upload/v1667070021/development/sign_up_edvdjz.jpg" class="img-fluid rounded-start" alt="..." style="height: 100%";>
        </div>
        <div class="col-md-6">
          <div class="card-body1">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in" %>
              </div>
              <%= render "devise/shared/links" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

